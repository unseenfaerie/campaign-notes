<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= character.name %> | Campaign Notes
    </title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <div class="container">
        <%- include('partials/sidenav') %>
            <main class="content">
                <h1>
                    <%= character.name %>
                </h1>
                <p><strong>Type:</strong>
                    <%= character.type %>
                </p>

                <p><strong>Class:</strong>
                    <%= character.class %>
                </p>
                <p><strong>Level:</strong>
                    <%= character.level %>
                </p>
                <p><strong>Alignment:</strong>
                    <%= character.alignment %>
                </p>

                <% if (patron_deities && patron_deities.length> 0) { %>
                    <p><strong>Patron Deity:</strong>
                        <% patron_deities.forEach(function(deity, idx) { %>
                            <a href="/api/deities/page/<%= deity.id %>">
                                <%= deity.name %>
                            </a>
                            <%= idx < patron_deities.length-1 ? ', ' : '' %>
                                <% }); %>
                    </p>
                    <% } %>

                        <p>
                            <%= character.description %>
                        </p>

                        <h2>Statblock</h2>
                        <ul>
                            <li><strong>Strength:</strong>
                                <%= character.strength %>
                            </li>
                            <li><strong>Dexterity:</strong>
                                <%= character.dexterity %>
                            </li>
                            <li><strong>Constitution:</strong>
                                <%= character.constitution %>
                            </li>
                            <li><strong>Intelligence:</strong>
                                <%= character.intelligence %>
                            </li>
                            <li><strong>Wisdom:</strong>
                                <%= character.wisdom %>
                            </li>
                            <li><strong>Charisma:</strong>
                                <%= character.charisma %>
                            </li>
                            <li><strong>Total Health:</strong>
                                <%= character.total_health %>
                            </li>
                        </ul>

                        <p><strong>Status:</strong>
                            <%= character.deceased ? 'Deceased' : 'Alive' %>
                        </p>

                        <% if (events && events.length> 0) { %>
                            <h2>Events</h2>
                            <ul>
                                <% events.forEach(function(event) { %>
                                    <li><a href="/api/events/page/<%= event.id %>">
                                            <%= event.name %>
                                        </a></li>
                                    <% }); %>
                            </ul>
                            <% } %>

                                <% if (items && items.length> 0) { %>
                                    <h2>Items</h2>
                                    <ul>
                                        <% items.forEach(function(item) { %>
                                            <li><a href="/api/items/page/<%= item.id %>">
                                                    <%= item.name %>
                                                </a></li>
                                            <% }); %>
                                    </ul>
                                    <% } %>

                                        <% if (organizations && organizations.length> 0) { %>
                                            <h2>Organizations</h2>
                                            <ul>
                                                <% organizations.forEach(function(org) { %>
                                                    <li><a href="/api/organizations/page/<%= org.id %>">
                                                            <%= org.name %>
                                                        </a></li>
                                                    <% }); %>
                                            </ul>
                                            <% } %>

                                                <% if (relationships && relationships.length> 0) { %>
                                                    <h2>Relationships</h2>
                                                    <ul>
                                                        <% relationships.forEach(function(rel) { %>
                                                            <li>
                                                                <a href="/api/characters/page/<%= rel.related_id %>">
                                                                    <%= rel.related_name %>
                                                                </a>
                                                                <strong>
                                                                    - <%= rel.relationship_type %>
                                                                </strong>
                                                            </li>
                                                            <% }); %>
                                                    </ul>
                                                    <% } %>
            </main>
    </div>
</body>


</html>