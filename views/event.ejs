<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= event.name %> | Campaign Notes
  </title>
  <link rel="stylesheet" href="/styles.css">
</head>

<body>
  <div class="container">
    <%- include('partials/sidenav') %>
      <main class="content">
        <h1>
          <%= event.name %>
        </h1>
        <p>
          <%= event.short_description %>
        </p>
        <p><strong>Date:</strong>
          <%= event.real_world_date %>
        </p>
        <p><strong>In-Game Time:</strong>
          <%= event.in_game_time %>
        </p>
        <% if (characters && characters.length> 0) { %>
          <h2>Characters Involved</h2>
          <ul>
            <% characters.forEach(function(character) { %>
              <li><a href="/api/characters/page/<%= character.id %>">
                  <%= character.name %>
                </a></li>
              <% }); %>
          </ul>
          <% } %>
            <h2>Event Details</h2>
            <p><strong>DM Summary:</strong></p>
            <p>
              <%= event.long_explanation %>
            </p>
      </main>
  </div>
</body>

</html>